<div class="container w-100">
  <div class="row">
    <h1 class="col-6 offset-3 text-center">会社情報 編集画面</h1>
    <div class="col-6 offset-3 text-center">
    <%= form_with model: @company do |f| %>
      <div class="field mt-3">
        <%= f.label :name, "会社名" %><br />
        <%= f.text_field :name %>
      </div>
      <div class="field mt-3">
        <%= f.label :address, "住所" %><br />
        <%= f.text_field :address %>
      </div>
      <div class="field mt-3">
        <%= f.label :contact_number, "電話番号" %><br />
        <%= f.number_field :contact_number %>
      </div>
      <div class="mt-3">
        <%= f.label :company_code, "会社コード※編集不可", style: "color: red;" %><br />
        <%= @company.company_code %>
      </div>
      <div class="actions mt-3">
        <%= f.submit "更新" %>
      </div>
    <% end %>
    </div>
  </div>
</div>