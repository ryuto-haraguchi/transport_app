<div class="container">
  <div class="row">
    <h2 class="col-6 offset-3 text-center mt-3">案件一覧</h2>
</div>
<div class="row mt-3">
    <table class="table table-striped">
        <tr>
          <th col-2>案件名</th>
          <th col-2>内容</th>
          <th>車種</th>
          <th>金額</th>
          <th>集荷日</th>
          <th>配達日</th>
          <th>担当者</th>
          <th>車両</th>
          <th></th>
          <th></th>
        </tr>
        <% @projects.each do |project| %>
        <tr>
          <td class="text-nowrap text-truncate col-2" style="max-width: 200px;">
            <%= project.project_name.presence %>
          </td>
          <td class="text-nowrap text-truncate col-2" style="max-width: 200px;">
            <%= project.description.presence %>
          </td>
          <td class="text-nowrap text-truncate col-2" style="max-width: 200px;"><%= project.vehicle_type.presence %></td>
          <td class="text-nowrap"><%= project.amount.present? ? number_to_currency(project.amount, unit: "¥", precision: 0, delimiter: ",") : link_to('設定する', edit_companies_project_path(project), class: "text-danger text-decoration-none") %></td>
          <td class="text-nowrap"><%= project.planned_collection_date&.strftime('%m/%d %H:%M') || link_to('設定する', edit_companies_project_path(project), class: "text-danger text-decoration-none") %></td>
          <td class="text-nowrap"><%= project.planned_delivery_date&.strftime('%m/%d %H:%M') || link_to('設定する', edit_companies_project_path(project), class: "text-danger text-decoration-none") %></td>
          <td class="text-nowrap">
            <%= project.employee&.name.presence || link_to('設定する', edit_companies_project_path(project), class: "text-danger text-decoration-none") %>
          </td>
          <td class="text-nowrap">
            <%= project.vehicle&.vehicle_number.presence || link_to('設定する', edit_companies_project_path(project), class: "text-danger text-decoration-none") %>
          </td>
          <td class="text-nowrap"><%= link_to '詳細', companies_project_path(project) %></td>
          <td class="text-nowrap"><%= link_to '削除', companies_project_path(project), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </table>
</div>