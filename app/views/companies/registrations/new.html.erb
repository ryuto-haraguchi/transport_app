<div class="container w-100">
  <div class="row">
    <div class="col-6 offset-3 text-center">
      <h2 class="mt-4">会社情報登録</h2>
      <%= form_with(model: resource, url: registration_path(resource_name), local: true) do |f| %>

        <div class="field mt-5">
          <%= f.label :name, "会社名称" %><br />
          <%= f.text_field :name, 
              autofocus: true, 
              placeholder: "(株)XXX", 
              class: "form-control #{'is-invalid' if resource.errors[:name].any?}" %>
          <% if resource.errors[:name].any? %>
            <div class="invalid-feedback d-block">
              会社名を入力してください
            </div>
          <% end %>
        </div>

        <div class="field mt-5">
          <%= f.label :address, "住所" %><br />
          <%= f.text_field :address, 
              placeholder: "東京都新宿区西新宿1-2-34", 
              class: "form-control #{'is-invalid' if resource.errors[:address].any?}" %>
          <% if resource.errors[:address].any? %>
            <div class="invalid-feedback d-block">
              住所を入力してください
            </div>
          <% end %>
        </div>

        <div class="field mt-5">
          <%= f.label :contact_number, "電話番号" %><br />
          <%= f.telephone_field :contact_number, 
              placeholder: "01234567890", 
              class: "form-control #{'is-invalid' if resource.errors[:contact_number].any?}" %>
          <% if resource.errors[:contact_number].any? %>
            <div class="invalid-feedback d-block">
              電話番号を入力してください
            </div>
          <% end %>
        </div>

        <div class="field mt-5">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, 
              placeholder: "@example.com", 
              class: "form-control #{'is-invalid' if resource.errors[:email].any?}" %>
          <% if resource.errors[:email].any? %>
            <div class="invalid-feedback d-block">
              メールアドレスを入力してください
            </div>
          <% end %>
        </div>

        <div class="field mt-5">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, 
              autocomplete: "new-password", 
              placeholder: "任意のパスワード", 
              class: "form-control #{'is-invalid' if resource.errors[:password].any?}" %>
          <% if resource.errors[:password].any? %>
            <div class="invalid-feedback d-block">
              パスワードを入力してください
            </div>
          <% end %>
        </div>

        <div class="field mt-5">
          <%= f.label :password_confirmation, "確認用パスワード" %><br />
          <%= f.password_field :password_confirmation, 
              autocomplete: "new-password", 
              placeholder: "確認用パスワード", 
              class: "form-control #{'is-invalid' if resource.errors[:password_confirmation].any?}" %>
          <% if resource.errors[:password_confirmation].any? %>
            <div class="invalid-feedback d-block">
              確認用パスワードを入力してください
            </div>
          <% end %>
        </div>

        <div class="actions mt-5 mb-2">
          <%= f.submit "登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>