

<div class="container w-100">
  <div class="row">
    <div class="col-6 offset-3 text-center mt-3">
      <h2 class="mt-4">会社情報登録</h2>
      <%= form_with(model: resource, url: registration_path(resource_name), local: true) do |f| %>
        <%= render "companies/shared/error_messages", resource: resource %>

        <div class="field mt-5">
          <%= f.label :name, "会社名称" %><br />
          <%= f.text_field :name, autofocus: true, placeholder: "（株）〇〇運送" %>
        </div>

        <div class="field mt-2">
          <%= f.label :address, "住所" %><br />
          <%= f.text_area :address, placeholder: "東京都新宿区西新宿1-2-34" %>
        </div>

        <div class="field mt-2">
          <%= f.label :contact_number, "電話番号" %><br />
          <%= f.telephone_field :contact_number, placeholder: "01234567890" %>
        </div>

        <div class="field mt-2">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, placeholder: "@example.com" %>
        </div>

        <div class="field mt-2">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "任意のパスワード" %>
        </div>

        <div class="field mt-2">
          <%= f.label :password_confirmation, "確認用パスワード" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認用パスワード" %>
        </div>

        <div class="actions mt-2 mb-2">
          <%= f.submit "登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
