<!DOCTYPE html>
<html>
  <head>
    <title>TransportApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <% if current_company %>
    <header class="container-fluid shadow-sm p-3 mb-3 bg-white rounded">
      <div class="row">
        <h2 class="col-2 d-flex justify-content-center align-items-center">
        <%= current_company.name %>
        </h2> 
        <ul class="nav nav-tabs col-2 offset-8">
          <li class="nav-item">
            <a href="#" class="nav-link active">メニュー</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">項目</a>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="#">社員一覧</a>
              <a class="dropdown-item" href="#">車両一覧</a>
            </div>
          </li>
          <li class="nav-item">
            <%= link_to "ログアウト", destroy_company_session_path, method: :delete, class: "nav-link" %>
          </li>
        </ul>
      </div>
  <% elsif current_employee %>
    <header class="container-fluid shadow-sm p-3 mb-3 bg-white rounded">
      <div class="row">
        <h2 class="col-2 d-flex justify-content-center align-items-center">
        <%= current_employee.name %>
        </h2> 
        <ul class="nav nav-tabs col-2 offset-8">
          <li class="nav-item">
            <a href="#" class="nav-link active">メニュー</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">項目</a>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="#">出勤</a>
              <a class="dropdown-item" href="#">退勤</a>
            </div>
          </li>
          <li class="nav-item">
            <%= link_to "ログアウト", destroy_employee_session_path, method: :delete, class: "nav-link" %>
          </li>
        </ul>
      </div>
    </header>
  <% else %>
  <% end %>
  <body>
    <%= yield %>
  </body>
</html>
