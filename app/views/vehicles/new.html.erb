<div class="container w-100">
  <div class="row">
    <div class="col-6 offset-3 text-center">
      <h1>車両登録</h1>
      <%= form_with model: @vehicle do |f| %>
        <div class="form-group">
          <%= f.label :vehicle_number, "車両番号" %>
          <%= f.text_field :vehicle_number, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :vehicle_type, "車種" %>
          <%= f.text_field :vehicle_type, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :mileage, "走行距離" %>
          <%= f.text_field :mileage, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :fuel_type, "燃油種類" %>
          <%= f.text_field :fuel_type, class: "form-control" %>
        </div>
        <div>
          <%= f.submit "登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>